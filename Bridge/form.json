{
    "actions":
    [
      { 
        "type": "RowLayout",
        "items": [
            {
                "type": "Label",
                "caption": "Paring Mode:"
            },{
                "type": "Label",
                "name": "lblParingMode",
                "caption": "Unknown"
            },{
              "type": "Button",
              "caption": "Activate Pairing Mode",
              "onClick": "TZ_Paring($id,1);"
          },{
            "type": "Button",
            "caption": "Deactivate Pairing Mode",
            "onClick": "TZ_Paring($id,0);"
        }
      ]
    },
    {
      "type": "Configurator",
      "name": "Configurator",
      "caption": "Zigbee Devices",
      "delete": true,
      "sort": {
        "column": "Device",
        "direction": "ascending"
      },
      "columns": [
        {
          "caption": "Device",
          "name": "Device",
          "width": "150px"
        },
        {
          "caption": "Devicename",
          "name": "name",
          "width": "auto"
        },
        {
          "caption": "ModelID",
          "name": "ModelID",
          "width": "550px"
        },
        {
          "caption": "Manufacturer",
          "name": "Manufacturer",
          "width": "250px"
        }
      ],
      "values": []
    },
    {
      "type": "Button",
      "caption": "Reload Device List",
      "onClick": "TZ_reloadDevices($id);"
    },
    {
      "type": "Button",
      "caption": "Forget Device",
      "onClick": "TZ_forgetDevice($id,$Configurator['Device']);"
    }
    ]
}
